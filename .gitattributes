# Always use LF line endings for all text files
* text=auto eol=lf
# Shell scripts
*.sh text eol=lf
# Python
*.py text eol=lf
# HTML/CSS/JS
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
# Fonts, images, binary (no conversion)
*.woff binary
*.woff2 binary
*.ttf binary
*.png binary
*.jpg binary
*.jpeg binary
*.eot binary
*.svg binary
static/assets/video/background.mp4 filter=lfs diff=lfs merge=lfs -text
static/assets/video/background2.mp4 filter=lfs diff=lfs merge=lfs -text
static/assets/video/*.mp4 filter=lfs diff=lfs merge=lfs -text
static/**/*.mp4 filter=lfs diff=lfs merge=lfs -text
